                <Label x:Name="starostLbl" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.285,-0.193" FontSize="16" FontWeight="Bold"/>
            </InlineUIContainer></TextBlock>
        <Image x:Name="kuca" HorizontalAlignment="Left" Height="100" Margin="610,254,0,0" VerticalAlignment="Top" Width="100" Grid.Column="2"/>
        <Label x:Name="curGen" Content="Trenutna generacija: " Grid.Column="2" HorizontalAlignment="Left" Margin="563,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="aliveLbl" Content="Živih agenata: " Grid.Column="2" HorizontalAlignment="Left" Margin="563,133,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
